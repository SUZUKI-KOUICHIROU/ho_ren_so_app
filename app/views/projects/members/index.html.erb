<% provide(:title, 'メンバー一覧') %>

<%= content_for :side_menu do %>
  <%= render partial: 'layouts/sidebar' , locals: { user: @user, project: @project } %>
<% end %>

<div class="box-project-index">
  <p class="project-name-text">プロジェクト：<%= @project.project_name %></p>
  <h1 class="center">メンバー一覧</h1>
  <div class="box-search">
    <%= form_with url: project_member_index_path(@user, @project), method: :get, local: true do |form| %>
      <%= form.text_field :search, placeholder: "ユーザー名を入力", class: "search-box" %>
      <%= form.submit "検索", class: "btn btn-outline-orange" %>
    <% end %>
  </div>
  <div class="table-header">
    <div class="member-name">
      氏名
    </div>
    <div class="project-next-report-date">
      参加日
    </div>
    <% if project_leader? %>
    <div class="project-member-action">
      アクション
    </div>
    <% end %>
  </div>
  <div class="table-body">
    <% if @members.present? %>
      <% line_num = 0%>
      <% @members.each do |member|%>
        <% if member.user_name != "" %>
          <div class="table-line", data-project-index-line-num="<%="#{line_num}"%>">
            <div class="member-name member-text">
              <%#= link_to "#{member.user_name}", user_path(member.id), class: "project-detail-link" %>
              <%= member.user_name %>
            </div>
            <div class="project-next-report-date member-text">
              <% entry_date = ProjectUser.find_by(project_id: @project.id, user_id: member.id).created_at %>
              <%= l(entry_date, format: :long) %>
            </div>
            <% if project_leader? %>
            <div class="project-member-action">
              <% unless @project.project_leader_id == member.id %>
                <%= link_to "プロジェクトから外す", project_member_destroy_path(member.id, @project.id), method: :delete, data: { confirm: "#{member.user_name}さんをメンバーから外そうとしています。\nよろしいですか？" }, class: "btn btn-danger" %>
                <% delegate = @delegates.find_by(user_from: @user.id, user_to: member.id, is_valid: true) %>
                <% if delegate.present? %>
                  <%= link_to "リクエストをキャンセル", cancel_delegate_path(@user, @project, delegate), method: :post, class: "btn btn-danger" %>
                  <% else %>
                <%= link_to "リーダー権限を委譲", delegate_leader_path(@user, @project.id,member.id), method: :post, data: { confirm: "#{member.user_name}さんにリーダー権限委譲の打診を行います。\nよろしいですか？" }, class: "btn btn-danger" %>
                <% end %>
              <% end %>
            </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="index-footer">
    <% if @members.present?%>
      <div class="paginate">
        <%= paginate @members %>
      </div>
    <% end %>
  </div>
