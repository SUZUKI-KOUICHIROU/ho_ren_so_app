<% provide(:title, "#{@project.project_name}_報告") %>

<div>
  <div>
    <div>
      <%= form_with(model: @message, url: user_project_messages_path(current_user,@project), local: true, method: :post) do |f| %>
      <div class="col-8 container">
        <h1>連絡を作成</h1>
        <div>
          <%= f.label :aaa, "送信対象", class:"font-weight-bold col-12" %>
          <% if @member.present? %>
            <%= f.collection_check_boxes :send_to, @member, :id, :user_name, include_hidden: false, class: "form-control", required: true %>
          <% else %>
            <p class="text-center font-weight-bold text-danger">送信対象がいません</p>
          <% end %>
        </div>

        <div>
          <%= f.label :title, "概要", class:"font-weight-bold col-12" %>
          <%= f.text_field :title, min: 1, placeholder: "件名（30字以内）", class: "form-control message-text mb-3", required: true %>
        </div>

        <div>
          <%= f.label :message_detail, "連絡内容", class:"font-weight-bold col-12" %>
          <%= f.text_area :message_detail, min: 1, placeholder: "最大500文字", class: "form-control message-area mb-3",rows: "10", required: true %>
        </div>
      </div>
      <p></p>
      <div class="center">
        <%= link_to '戻る', user_project_path(@user,@project),class: "btn btn-light btn-outline-dark col-2" %>
        <%= f.submit "送信", class: "btn btn-primary col-2" %>
      </div>
    <% end %>
    
  </div>
</div>
