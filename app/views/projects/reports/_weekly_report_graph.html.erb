<div class="modal fade" id="weekly-graph" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="modalLabel">報告集計グラフ【１週間】</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bar_chart @report_data, height: '500px', library: {
          title: { text: '報告日ごとの報告割合' },
          yAxis: {
            allowDecimals: false,
            title: { text: '割合 (%)' },
            min: 0,  # Y軸の最小値を0に設定
            max: 100, # Y軸の最大値を100に設定
            labels: {
              formatter: "function() { return this.value + '%'; }"  # Y軸のラベルをパーセンテージ形式に
            }
          }
        } %>
      </div>
    </div>
  </div>
</div>
