<% provide(:title, "#{@project.project_name}_報告") %>

<div>
  <div>
    <div>
      <h1>相談を作成</h1>
      <%= form_with(model: @counseling, url: user_project_counselings_path(current_user,@project), local: true, method: :post) do |f| %>
      <div class="col-8 container">
        <div>
          <%= f.label :send_to, "送信対象" %>
          <br>
          <%= f.collection_check_boxes :send_to, @member, :id, :user_name, include_hidden: false, class: "form-control", required: true %>
        </div>

        <div>
          <%= f.label :title, "概要" %>
          <%= f.text_field :title, min: 1, placeholder: "件名（30字以内）", class: "form-control", required: true %>
        </div>

        <div>
          <%= f.label :counseling_detail, "相談内容" %>
          <%= f.text_area :counseling_detail, min: 1, placeholder: "最大500文字", class: "form-control",rows: "10", required: true %>
        </div>
      </div>
      <p></p>
      <div class="center">
        <%= f.submit "送信", class: "btn btn-primary col-2" %>
      </div>
    <% end %>
    <p class="center" style="padding: 10px;"><%= link_to '戻る', user_project_path(@user,@project),class: "btn btn-light btn-outline-dark col-2" %></p>
  </div>
  </div>
</div>
