<% provide(:title, "友人を招待する") %>


<div class="row box invite">
  <h3 class="center">友人を招待する</h3>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:invitee, url: create_invitation_path(@user, @project)) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.hidden_field :project_leader_id, :value => @user.id %>
      <%= f.hidden_field :project_id, :value => @project.id %>
      <div class="modal-footer">
          <%= f.submit "送信", class: "btn btn-light btn-outline-dark", style: "margin: 10px;" %>
      </div>
      <div>
        <%= link_to '一覧へ戻る', user_projects_path(@user, @project),class: "btn btn-light btn-outline-orange", style: "margin: 10px;" %>
      </div>
    <% end %>
  </div>
</div>
