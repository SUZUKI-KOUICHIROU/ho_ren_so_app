<% provide(:title, (@user.user_name)) %>

<%= content_for :side_menu do %>
  <%= render partial: 'layouts/sidebar' , locals: { user: @user, project: @project } %>
<% end %>


<div class="card-box ">
  <div class="card">
    <div class="card-header card-header-radius">
      <%= current_user.user_name %>
    </div>
    <div class="card-body">
      <div class="container" style="padding: 5px">
        <span class='card-title-frame'>
          <span>
            氏名
          </span>
        </span>
        <div class="card-text ml-0">
          <%= @user.user_name %>
        </div>
        <span class='card-title-frame'>
          <span>メールアドレス</span>
        </span>
        <div class="card-text ml-0">
          <%= @user.email %>
        </div>
        <div class='text-right'>
          <%= link_to "ユーザー情報の編集", edit_user_registration_path, class: "btn btn-light btn-outline-orange" %>
        </div> 
      </div>
    </div>
  </div>
</div>

