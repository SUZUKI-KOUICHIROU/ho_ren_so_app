<% provide(:title, (@user.user_name)) %>

<p class="subject"><h1>ログイン情報</h1></p>
<div class="container">
  <div class="row">
    <div class="titlebar">
      <p class="date"><%= link_to "編集", edit_user_registration_path, class: "btn btn-lg btn1" %></p>
    </div>
    <table class="table table-bordered" id="table-user-description">
      <tbody>
        <tr>
        <th class="active col-md-2"><%= User.human_attribute_name :氏名 %></th>
          <td><%= @user.user_name %></td>
        </tr>
        <tr>
          <th class="active col-md-2"><%= User.human_attribute_name :メールアドレス %></th>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= link_to "招待する", new_invitation_path(@user), class: "btn btn-secondary", style: "margin: 10px;" %>

<h1>グループ一覧</h1>
<div class="project_list">
  <% @projects.each do |project| %>
    <div class="project_index">
      <% if user_signed_in? %>
        <% unless ProjectUser.exists?(project_id: project.id, user_id: current_user.id) %>
          <div class="participation">
            <%= link_to '参　加', join_user_project_path(@user, project) %>
          </div>
        <% else %>
          <div class="participation">
            <a href="#">参加中</a>  ##グループの詳細が見れるようにlink_toを用いて実装予定
          </div>
        <% end %>
      <% end %>
      <div class="project_name" >
        <%= project.project_name %>
      </div>
    </div>
  <% end %>
</div>
