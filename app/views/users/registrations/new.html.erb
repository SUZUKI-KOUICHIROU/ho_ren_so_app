<% provide(:title, 'ユーザー新規登録') %>
<div class="sessions-new-img">
  <div class="sessions-new-container">
    <div class="container">
      <div class="row justify-content-around">
        <div class="login-box">
          <div class="box-inner">
            <h1 class="box-new-title">新規ユーザー登録</h1>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                  <%= form_with(model: @user, local: true) do |f| %>
                    <%= f.label :user_name, "名前", class: "email-label" %>
                      <div class="box-name">
                        <%= f.text_field :user_name, autofocus: true, autocomplete: "name" ,class: "text-name" %>
                      </div>
                    <%= f.label :email, "メールアドレス", class: "email-label" %>
                      <div class="box-email">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "text-email" %>
                      </div>
                    <%= f.label :password, "パスワード", class: "password-label" %>
                      <div class="box-password">
                        <%= f.password_field :password, autocomplete: "current-password" %>
                      </div>
                    <%= f.label :password_confirmation, "パスワード（確認用）", class: "password-label" %>
                      <div class="box-password">
                        <%= f.password_field :password_confirmation, autocomplete: "current-password" %>
                      </div>
                    <div class="center">
                      <%= f.submit "新規作成", class: "btn btn-block btn-outline-orange" %>
                    </div>
                    <div class="center">
                      <%= link_to "ログイン画面に戻る", :back, class: "btn btn-block btn-outline-secondary" %>
                    </div>
                <% end %>
              </div>
              <% end %>
                <div class="box-newusr">
                  <p><span>------------------------------------------------</span></p>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
