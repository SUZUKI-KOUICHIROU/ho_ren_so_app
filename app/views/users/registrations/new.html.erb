<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
  <div class="col-md-6 col-md-offset-3 user-table">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :名前, class: "label-signup" %>
      <%= f.text_field :user_name, class: "form-control" %>

      <%= f.label :email, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
<% end %>

<%= render "users/shared/links" %>
