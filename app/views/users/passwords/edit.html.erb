
<% provide(:title, 'パスワード設定画面') %>

 <%= render "users/shared/error_messages", resource: resource %>
<div class="user-format col-lg-6 mx-auto mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put,id:'password-reset-form' }) do |f| %>
    <div class="form-content">
      <h1 class="text-center my-3">パスワード再設定</h1>
      <div class="project form-body">
        <%= f.hidden_field :reset_password_token %>
        <div class="project-detail">
          <%= f.label :password, "パスワード" , class:'project-description-label' %><span class="pl-2 font-weight-bold text-danger">必須</span>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", id: "reset_password" %>
          <div id="password-error-message" class="text-danger pt-2"></div>
        </div>

        <div class="project-detail">
          <%= f.label :password_confirmation, "パスワード確認" %><span class="pl-2 font-weight-bold text-danger">必須</span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "reset_password_confirm" %>
          <div id="password-confirm-error-message" class="text-danger pt-2"></div>
        </div>

        <div class="actions text-center">
          <%= f.submit "パスワード変更", class: "btn btn-outline-orange" %>
          <%= link_to "ログイン画面に戻る", new_user_session_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>