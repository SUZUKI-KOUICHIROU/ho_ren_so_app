<% provide(:title, 'パスワードリセット画面') %>

<%= render "users/shared/error_messages", resource: resource %>
<div class="projects-format mt-5">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id:'password-form' }) do |f| %>
    <div class="form-content">
      <h1 class="text-center my-3">パスワードリセット</h1>
      <div class="project form-body">
        <div class="project-detail">
          <%= f.label :email, "メールアドレス", class: "email-label, project-description-label" %><span class="project-required">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id:'users_email' %>
          <div id="email-error-message" class="text-danger pt-2"></div>
        </div>

        <div class="center">
          <%= f.submit "パスワードリセット", class: "btn btn-block btn-outline-orange" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="center mt-3">
    <%= link_to "ログイン画面に戻る", new_user_session_path, class: "btn btn-block btn-outline-secondary" %>
  </div>  
</div>
